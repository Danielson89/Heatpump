  - platform: template
    name: "Timer 2 OFF Time"
    id: timer2_off_time
    type: time
    optimistic: true
    restore_value: true
    initial_value: "14:00:00"
    set_action:
      - lambda: |-
          auto time_components = x;  // x contains the NEW time value
